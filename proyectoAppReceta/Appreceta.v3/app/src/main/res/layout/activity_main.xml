<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Listmenu"
        android:touchscreenBlocksFocus="false"
        android:weightSum="1"
        android:transitionGroup="false"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnhome"
            android:background="@drawable/home" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/BtnRecetas"
            android:background="@drawable/receta"
          />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnvideos"
            android:background="@drawable/video" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnajustes"
            android:background="@drawable/ajuste" />

    </LinearLayout>

    <ImageView
        android:layout_width="352dp"
        android:layout_height="345dp"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/Listmenu"
        android:layout_marginTop="90dp"
        android:background="@drawable/portada"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:text="INGREDIENTES"
        android:id="@+id/button4"
        android:background="#ffffd016"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button5" />

    <Button
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:text="PREPARACION"
        android:id="@+id/button5"
        android:background="#ffffc915"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>
